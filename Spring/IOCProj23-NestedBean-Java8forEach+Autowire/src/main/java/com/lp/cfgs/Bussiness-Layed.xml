<?xml version="1.0" encoding="UTF-8"?>
<beans  default-autowire="constructor"   xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="drds"
		class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName"
			value="oracle.jdbc.driver.OracleDriver" />
		<property name="url"
			value="jdbc:oracle:thin:@localhost:1521:orcl" />
		<property name="username" value="system" />
		<property name="password" value="manager" />
	</bean>
	<!-- cfg DAO class -->
  <bean id="Empdao" class="com.lp.dao.EmployeeDAOIMPL" autowire="default"  />
     <bean id="empser"  class="com.lp.service.EmployeeServiceImpl"  autowire="default"  />
     
</beans>
